<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="5dp"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

            <androidx.cardview.widget.CardView
                    android:id="@+id/imageCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/descWebsite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.003"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/titreWebsite">

                <ImageView
                        android:id="@+id/coverWebsite"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/pic_rounded"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/cor2" />

            </androidx.cardview.widget.CardView>


            <!--TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateText"
                    android:textColor="#7E7B7B"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/authorArt"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/authorArt"
                    app:layout_constraintVertical_bias="0.37"
                    tools:ignore="SmallSp" /-->

            <TextView
                    android:id="@+id/dateWt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="@string/datered"
                    android:textAlignment="textStart"
                    android:textColor="#595757"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/nameWebsite"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameWebsite"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/titreWebsite"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLength="100"
                    android:maxLines="3"
                    android:text="@string/titre"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.789"
                    app:layout_constraintStart_toEndOf="@+id/imageCard"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.057" />

            <TextView
                    android:id="@+id/descWebsite"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="80"
                    android:maxLines="2"
                    android:textAlignment="textStart"
                    android:text="@string/contenu"
                    android:textColor="#7E7B7B"
                    android:textSize="14sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/titreWebsite"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/titreWebsite"
                    app:layout_constraintTop_toBottomOf="@+id/titreWebsite"
                    app:layout_constraintVertical_bias="0.057" />

            <TextView
                    android:id="@+id/nameWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="270"
                    android:maxLines="3"
                    android:text="@string/author"
                    android:textAlignment="textStart"
                    android:textColor="#595757"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/descWebsite"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descWebsite"
                    app:layout_constraintVertical_bias="0.164" />

            <ImageView
                    android:id="@+id/passBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_brokenlink"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/imageCard"
                    app:layout_constraintTop_toBottomOf="@+id/imageCard"
                    app:layout_constraintVertical_bias="0.562" />

            <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateWt"
                    app:layout_constraintVertical_bias="0.733">

                <View
                        android:id="@+id/view3"
                        android:layout_width="380dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="#DADADA"
                        tools:layout_editor_absoluteX="11dp"
                        tools:layout_editor_absoluteY="250dp" />

                <ImageView
                        android:id="@+id/cmtBtnWs"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/blog"
                        tools:layout_editor_absoluteX="186dp"
                        tools:layout_editor_absoluteY="264dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
